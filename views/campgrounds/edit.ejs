<% layout('/layouts/boilerplate') %>

    <div class="row mb-2">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">

            <form action="/campgrounds/<%=campground._id%>?_method=PATCH" method="POST" novalidate class="validate-form"
                enctype="multipart/form-data">
                <div>
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control mb-2 border-3" type="text" id="title" name="campground[title]"
                        value="<%= campground.title %>" required>
                </div>
                <div>
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control mb-2 border-3" type="text" id="location" name="campground[location]"
                        value="<%= campground.location %>" required>
                </div>
                <div>
                    <label for="images" class="mb-2">Add images</label>
                    <input type="file" class="form-control mb-2" id="images" name="image" multiple>
                </div>
                <div>
                    <label class="form-label" for="description">Descripton</label>
                    <textarea class="form-control mb-2 border-3" type="text" id="description"
                        name="campground[description]" required><%= campground.description %></textarea>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="number" id="price" step="0.01" class="form-control border-3"
                            value="<%= campground.price %>" name="campground[price]"
                            aria-label="Amount (to the nearest dollar)" required>
                    </div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach((img, i)=> { %>
                        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i %>" name="deleteImages[]" value="<%=img.filename %>">
                            <label for="image-<%=i %>">Delete</label>
                        </div>

                        <% }) %>
                </div>


                <button class="btn btn-primary mb-1">Update campground</button>
                <a class="btn btn-danger mb-1" href="/campgrounds/<%=campground.id %> ">Cancel</a>

            </form>

        </div>
    </div>